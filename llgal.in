	my @captions = <CAP>;
	close(CAP) ;

	indprint "Appending new captions to $captions_filename: " ;
	open (CAP, ">>$destination_dir/$local_llgal_dir/$captions_filename")
	    or die "Can't open $destination_dir/$local_llgal_dir/$captions_filename file to append\n" ;

	init_percentage () ;

	print CAP "\n" ;
	print CAP "# Appended new captions (", scalar localtime, ").\n" ;
	print CAP "\n" ;
	# it's not easy to count chars in an append-only file
	# so we don't count them when computing the percentage

	for (my $i = 0; $i < $nentries; $i++) {
	    my $type = $entries[$i]->{type} ;
	    if ($type == $TYPE_IMG) {
		print CAP "IMG: ". $entries[$i]->{filename}
		." ---- ". $entries[$i]->{caption} ."\n"
		    unless grep { $captions[$_] =~ m/^(\s*IMG:)?\s*$entries[$i]->{filename}\s+----\s/ } ( 0 .. $#captions ) ;
	    } elsif ($type == $TYPE_MVI) {
		print CAP "MVI: " . $entries[$i]->{filename}
		." ---- ". $entries[$i]->{linktext}
		." ---- ". $entries[$i]->{caption} ."\n"
		    unless grep { $captions[$_] =~ m/^\s*MVI:\s*$entries[$i]->{filename}\s+----\s/ } ( 0 .. $#captions ) ;
	    } elsif ($type == $TYPE_FIL) {
		print CAP "FIL: " . $entries[$i]->{filename}
		." ---- ". $entries[$i]->{linktext}
		." ---- ". $entries[$i]->{caption} ."\n"
		    unless grep { $captions[$_] =~ m/^\s*FIL:\s*$entries[$i]->{filename}\s+----\s/ } ( 0 .. $#captions ) ;
	    } elsif ($type == $TYPE_DIR) {
		print CAP "DIR: " . $entries[$i]->{filename}
		." ---- ". $entries[$i]->{linktext}
		." ---- ". $entries[$i]->{caption} ."\n"
		    unless grep { $captions[$_] =~ m/^\s*DIR:\s*$entries[$i]->{filename}\s+----\s/ } ( 0 .. $#captions ) ;
	    }
	    print_percentage ($i+1, $nentries) ;
	}
    } else {
	indprint "Creating the $captions_filename file: " ;
	open (CAP, ">$destination_dir/$local_llgal_dir/$captions_filename")
	    or die "Can't create $destination_dir/$local_llgal_dir/$captions_filename file\n" ;

	init_percentage () ;
	print CAP "# This is llgal's $captions_filename file, first generated ", scalar localtime, ".\n" ;
	print CAP "# TITLE: title of the index\n" ;
	print CAP "# INDEXHEAD: one header line in the index\n" ;
	print CAP "# INDEXFOOT: one header line in the index\n" ;
	print CAP "# TXT: text ---- caption\n" ;
	print CAP "# LNK: url ---- slide link text ---- caption\n" ;
	print CAP "# IMG: imagefile.{gif,png,jpg} ---- caption\n" ;
	print CAP "# MVI: movie.{avi,mpg,mpeg} ---- slide link text ---- caption\n" ;
	print CAP "# FIL: file ---- slide link text ---- caption\n" ;
	print CAP "# DIR: directory ---- slide link text ---- caption\n" ;
	print CAP "\n" ;
	print CAP "# $caption_removal_line\n" ;
	print CAP "\n" ;
	my $caption_header_lines = $. ;
	print_percentage ($caption_header_lines, $caption_header_lines+$nentries) ;

	for (my $i = 0; $i < $nentries; $i++) {
	    my $type = $entries[$i]->{type} ;
	    if ($type == $TYPE_IMG) {
		print CAP "IMG: ". $entries[$i]->{filename}
		." ---- ". $entries[$i]->{caption} ."\n";
	    } elsif ($type == $TYPE_MVI) {
		print CAP "MVI: " . $entries[$i]->{filename}
		." ---- ". $entries[$i]->{linktext}
		." ---- ". $entries[$i]->{caption} ."\n";
	    } elsif ($type == $TYPE_FIL) {
		print CAP "FIL: " . $entries[$i]->{filename}
		." ---- ". $entries[$i]->{linktext}
		." ---- ". $entries[$i]->{caption} ."\n";
	    } elsif ($type == $TYPE_DIR) {
		print CAP "DIR: " . $entries[$i]->{filename}
		." ---- ". $entries[$i]->{linktext}
		." ---- ". $entries[$i]->{caption} ."\n";
	    }
	    print_percentage ($caption_header_lines+$i+1, $caption_header_lines+$nentries) ;
	}
    }
    close(CAP);
    print "\n";
    show_warnings ;

    if ($make_recursive) {
	print "\n"
	    if @subdirs ;
	foreach my $dir (@subdirs) {
	    indprint "Entering subdirectory '$dir'...\n" ;
	    system ( $0, @llgal_options, "-d", "$destination_dir/$dir", "--indent", "  ".$indent ) ;
	    die "Failed to call $0 for subdirectory $destination_dir/$dir ($!).\n"
		if $? == -1 ;
	    immediate_warning "$0 failed for subdirectory $destination_dir/$dir."
		if $? ;
	    indprint "Leaving subdirectory '$dir'.\n" ;
	    print "\n" ;
	}
    }

    indprint "Now edit the $captions_filename file to your liking and run llgal -c\n";
    exit 0 ;

}

#######################################################################
# Use caption file

if ($use_caption_file) {
    # read in files specified in the .captions file if it exists
    indprint "Reading the $captions_filename file and preparing entries: ";
    init_percentage ();

    open(CAP,"$destination_dir/$local_llgal_dir/$captions_filename")
	or die "Can't open $destination_dir/$local_llgal_dir/$captions_filename file\n";

    my $size = (-s CAP) ;
    my $line;
    while (defined ($line = <CAP>)) {
	chomp($line); $line =~ s/^\s*//; $line =~ s/\s\(\s*\)$/\1/;
	# only lines that don't start with # and are not empty
	if (!($line =~ m/^\#/) && !($line =~ /^$/)) {
	    if ($line =~ m/TITLE:\s*(.*)\s*/) {
		# title
		$index_title = $1;

	    } elsif ($line =~ m/^INDEXHEAD:\s+(.*)\s*$/) {
		# header for the index
		push @headers, $1 ;

	    } elsif ($line =~ m/^INDEXFOOT:\s+(.*)\s*$/) {
		# footer for the index
		push @footers, $1 ;

	    } else {
		# that's a slide, create its entry
		my $entry;
		# flexibility:
		# - the last \s might be omitted when there's no caption
		# - \s is facultative after TYP: at the begining
		if ($line =~ m/^TXT:\s*(.+)\s+----\s*(?:\s(.*))?\s*$/) {
		    # text slide
		    $entry = make_entry ($TYPE_TXT, undef, undef, undef, $1, $2) ;

		} elsif ($line =~ m/^LNK:\s*(.+)\s+----\s+(.+)\s+----\s*(?:\s(.*))?\s*$/) {
		    # link slide
		    $entry = make_entry ($TYPE_LNK, undef, undef, $1, $2, $3) ;

		} elsif ($line =~ m/^DIR:\s*(.+)\s+----\s+(.+)\s+----\s*(?:\s(.*))?\s*$/) {
		    # directory slide
		    $entry = make_entry ($TYPE_DIR, $1, $1, undef, $2, $3) ;
		    push @subdirs, $1 ;

		} elsif ($line =~ m/^MVI:\s*(.+)\.(.+)\s+----\s+(.+)\s+----\s*(?:\s(.*))?\s*$/) {
		    # movie slide
		    $entry = make_entry ($TYPE_MVI, $1.".".$2, $1, undef, $3, $4) ;

		} elsif ($line =~ m/^FIL:\s*(.+)\s+----\s+(.+)\s+----\s*(?:\s(.*))?\s*$/) {
		    # movie slide
		    $entry = make_entry ($TYPE_FIL, $1, $1, undef, $2, $3) ;

		} elsif ($line =~ m/^IMG:\s*(.+)\.(.+)\s+----\s*(?:\s(.*))?\s*$/
			 or $line =~ m/^(.+)\.(.+)\s+----\s*(?:\s(.*))?\s*$/) {
		    # image slide (default)
		    $entry = make_entry ($TYPE_IMG, $1.".".$2, $1, undef, undef, $3) ;

		} else {
		    die "Unrecognized line #$. in caption file: \"$line\"\n" ;
		}

		if (defined $entry) {
		    # really add this entry
		    push @entries, $entry ;
		}
	    }
	}
	print_percentage (tell CAP, $size) ;
    }
    close(CAP);
    $nentries = @entries ;
    print "\n" ;
    show_warnings ;
    indprint "Found $nentries files.\n";

} else {
    # generate the gallery without caring about the caption file
    get_entries ;
    show_warnings ;
    indprint "Found $nentries files in directory $destination_dir\n";
}

#######################################################################
# Add recursion header and footer

if ($parent_link) {
    unshift @headers, "<a href=\"..\">". $parent_linktext ."</a>" ;
    push @footers, "<a href=\"..\">". $parent_linktext ."</a>" ;
}

#######################################################################

# Get the indextemplate
get_generic_llgal_file ($indextemplate_filename) ;

# Get the slide template if needed
get_generic_llgal_file ($slidetemplate_filename) if !$make_no_slides ;

# Get the css
get_generic_llgal_file ($css_filename) ;

# Get the film tile for the index
if ($show_no_film_effect) {
    indprint "Omitting film effect.\n" ;
} else {
    get_generic_llgal_file ($filmtile_filename) ;
}

# rescale the tiled image if needed
if (!$show_no_film_effect) {
    my $tileh = (imgsize("$destination_dir/$local_llgal_dir/$filmtile_filename"))[1] ;
    if ($tile_height != $tileh) {
	my @output = system_with_output
	    ( "reduce film tile",
	      "mogrify", "-scale", "x$tile_height", "$destination_dir/$local_llgal_dir/$filmtile_filename" ) ;
	my $status = shift @output ;
	if ($status) {
	    # die on whatever error
	    immediate_external_warnings @output ;
	    die "Failed to execute 'mogrify' to reduce the film tile.\n" ;
	}
    }
}

#######################################################################
# Create the individual slide show files

if ($make_no_slides) {
    indprint "Linking thumbnails directly to image files...  Making no html slides.\n";
} else {
    # remove old .html files
    system ("rm -f \"$destination_dir/*.html\"") ;
    die "Failed to remove existing HTML slides.\n"
	if $? ;

    # keep the slidetemplate in memory instead of always reopening it
    my @slidetemplate_text;
    open(SR,"$destination_dir/$local_llgal_dir/$slidetemplate_filename")
	or die "Can't open the slide template file\n";
    @slidetemplate_text = <SR>;
    close SR;

    # create slides
    indprint "Creating individual slides: ";
    init_percentage ();
    for (my $i = 0; $i < $nentries; $i++) {
	open(SW, ">$destination_dir/$entries[$i]->{slide_filename}")
	    or die "Can't create slide file\n";

	my $type = $entries[$i]->{type} ;

	my $altname ;
	if ($make_slide_title_from_caption) {	# use image caption for the image alternative
	    $altname = "$entries[$i]->{title} - $entries[$i]->{caption}" ;
	} else {	# otherwise use the image name (strip suffix)
	    $altname = $entries[$i]->{title};
	}

	my $title ;
	if ($make_slide_title_from_caption) {	# use image caption for the HTML slide title
	    $title = $entries[$i]->{caption} ;
	} else {
	    $title = $entries[$i]->{title};
	}

	my @slidetemplate_text_copy = @slidetemplate_text ; # don't touch the original template
        for my $line (@slidetemplate_text_copy) {
	    $line =~ s/<!--SLIDE-TITLE-->/$title/g;
	    $line =~ s/<!--TITLE-->/$index_title/g;
	    $line =~ s/<!--CSS-->/$local_llgal_dir\/$css_filename/g;

	    # set the style
	    if ($line =~ m/<!--THIS-SLIDE-STYLE-->/g) {
		if ($type == $TYPE_IMG) {
		    $line =~ s/<!--THIS-SLIDE-STYLE-->/image-slide/ ;
		} else {
		    $line =~ s/<!--THIS-SLIDE-STYLE-->/text-slide" style="width: ${text_slide_width}px; height: ${text_slide_height}px;/ ;
		}
	    }

	    # fill the main part
	    if ($line =~ m/<!--THIS-SLIDE-->/g) {
		if ($type == $TYPE_IMG) {
		    # image slide

		    if (defined $entries[$i]->{scaled_filename}) {
			# scaled image with link to the real image
			$line =~ s/<!--THIS-SLIDE-->/<a href="$entries[$i]->{url}"><img src="$entries[$i]->{scaled_url}" alt="$altname" title="click to see full-size ($altname)" \/><\/a>/ ;

		    } else {
			# real image
			$line =~ s/<!--THIS-SLIDE-->/<img src="$entries[$i]->{url}" alt="$altname" title="$altname" \/>/g ;

		    }
		} elsif ($type == $TYPE_TXT) {
		    # text slide
		    $line =~ s/<!--THIS-SLIDE-->/$entries[$i]->{linktext}/ ;
		} else {
		    # link or movie or directory slide
		    $line =~ s/<!--THIS-SLIDE-->/<a href="$entries[$i]->{url}">$entries[$i]->{linktext}<\/a>/ ;
		}
	    }

	    # add the caption, with the image counter unless --nc is specified
	    my $imagecaption ;
	    if ($show_no_slide_counter) {
		$imagecaption = $entries[$i]->{caption} ;
	    } else{
		$imagecaption = $entries[$i]->{caption} . "&nbsp;&nbsp;&nbsp;(" . ($i+1) ."/$nentries)" ;
	    }

	    # add dimensions and size to the caption
	    if (($slide_width_max or $slide_height_max) and ($show_dimensions or $show_size)
		and ($type == $TYPE_IMG or $type == $TYPE_MVI or $type == $TYPE_FIL)) {
		my $printdim = "$entries[$i]->{xdim}x$entries[$i]->{ydim}" ;
		my $printsize = "$entries[$i]->{kbytes}$show_size_unit" ;
		if ($show_dimensions && $show_size && $type == $TYPE_IMG) {
		    $imagecaption .= "&nbsp;&nbsp;&nbsp;" . "$printdim ($printsize)" ;
		} elsif ($show_size) {
		    $imagecaption .= "&nbsp;&nbsp;&nbsp;" . $printsize ;
		} elsif ($show_dimensions) {
		    $imagecaption .= "&nbsp;&nbsp;&nbsp;" . $printdim if $type == $TYPE_IMG ;
		}
	    }

	    $line =~ s/<!--IMAGE-CAPTION-->/$imagecaption/g ;
	    $line =~ s/<!--INDEX-FILE-->/$index_filename/g ;
	    $line =~ s/<!--THIS-SLIDE-->/$entries[$i]->{slide_url}/g ;

	    # process PREV/NEXT SLIDE
	    my $prev ;
	    my $next ;
	    if ($make_slide_title_from_caption) {
		$prev = $entries[$i-1]->{caption} ;
		$next = $entries[($i==$nentries-1?0:$i+1)]->{caption} ;
	    } else {
		$prev = $entries[$i-1]->{filename} ;
		$next = $entries[($i==$nentries-1?0:$i+1)]->{filename} ;
	    }
	    $line =~ s/<!--PREV-SLIDE-->/\"$entries[$i-1]->{slide_url}\" title=\"$prev\"/g ;
	    $line =~ s/<!--NEXT-SLIDE-->/\"$entries[($i==$nentries-1?0:$i+1)]->{slide_url}\" title=\"$next\"/g ;

	    # output the line
	    print SW "$line" ;
	}
	close(SW) ;
	print_percentage ($i+1, $nentries) ;
    }
}
print "\n" ;
show_warnings ;

#######################################################################
# Creating the index file

indprint "Creating the $index_filename file: " ;
open(IXR, "$destination_dir/$local_llgal_dir/$indextemplate_filename")
    or die "Can't open the index template file\n" ;
open(IXW, ">$destination_dir/$index_filename")
    or die "Can't create main $index_filename file\n" ;

# headers
my $line ;
while (defined($line = <IXR>)) {
    if ($line =~ m/<!--HEADERS-->/) {
	foreach my $header (@headers) {
	    print IXW "    <div class=\"header\">" . $header . "</div>\n" ;
	}
    } else {
	$line =~ s/LLGAL-OPTIONS/@llgal_options/g ;
        $line =~ s/<!--TITLE-->/$index_title/g ;
	$line =~ s/<!--CSS-->/$local_llgal_dir\/$css_filename/g;
	print IXW "$line";
# stop at <!-- ********** -->
	last if ($line =~ m/\*{10}/) ;
    }
}

# for each row
my $num;
my $forced_width_warning = 0;
init_percentage ();
for (my $i = 0; $i < $nentries; $i += $num) {
    $num = 0;

# figure out how many to put in next row.
    my $width = 0 ;
    while ( ($i+$num < $nentries)
	    && (!$thumbnails_per_row or $num < $thumbnails_per_row)
	    && (!$pixels_per_row or $width < $pixels_per_row) ) {
	$width += $entries[$num+$i]->{thumb_xdim} ;
	$num++ ;
	# add cellpadding
	$width += $index_cellpadding ;
    }
    if ($pixels_per_row > 0 && $width > $pixels_per_row) {
	if ($num >= 2) {
	    $num-- ;
	} else {
	    $forced_width_warning++ ;
	}
    }

# Now output the row of thumbnails.
    if ($show_no_film_effect) {
	print IXW "<table class=\"index\" style=\"border-spacing: ", $index_cellpadding, "px 0px;\">\n";
    } else {
	print IXW "<table class=\"index with-tile\" style=\"border-spacing: ", $index_cellpadding, "px 0px;\">\n";
    }
    print IXW "  <tr><td class=\"tiled\" colspan=\"", ($show_no_film_effect?$num:$num+2), "\">&nbsp;</td></tr>\n" unless ($show_no_film_effect);
    print IXW "  <tr>\n";
    print IXW "    <td class=\"thumb\">&nbsp;</td>\n" unless ($show_no_film_effect);
    for (my $j = 0; $j < $num; $j++) {
	my $type = $entries[$i+$j]->{type} ;
	my $width = $entries[$i+$j]->{thumb_xdim} ;
	my $height = $entries[$i+$j]->{thumb_ydim} ;

	if ($type == $TYPE_TXT or $type == $TYPE_LNK or $type == $TYPE_MVI or $type == $TYPE_FIL or $type == $TYPE_DIR) {
	    print IXW "    <td class=\"text-thumb\" style=\"width: ", $width, "px; height: ", $height, "px;\">\n" ;
            print IXW "      " ;
	    if ($type == $TYPE_MVI or $type == $TYPE_FIL) {
		# directly open the movies from the index
		print IXW "<a href=\"", $entries[$i+$j]->{url}, "\">", $entries[$i+$j]->{linktext}, "</a>" ;
	    } else {
		print IXW "<a href=\"", $entries[$i+$j]->{slide_url}, "\">", $entries[$i+$j]->{linktext}, "</a>" ;
	    }
	    print IXW "</td>\n" ;
	} elsif ($type == $TYPE_IMG) {
	    print IXW "    <td class=\"thumb\" style=\"width: ", $width, "px; height: ", $height, "px;\">\n";
	    if ($make_no_slides) {
		print IXW "      <a href=\"", $entries[$i+$j]->{url}, "\">" ;
	    } else {
		print IXW "      <a href=\"", $entries[$i+$j]->{slide_url}, "\">" ;
	    }

	    my $altname;
	    if ($make_slide_title_from_caption) {	# use image caption for image alternative
		$altname = "$entries[$i+$j]->{title} - $entries[$i+$j]->{caption}" ;
	    } else {	# otherwise use the image name (strip suffix)
		$altname = $entries[$i+$j]->{title};
	    }

	    print IXW "<img src=\"$entries[$i+$j]->{thumb_url}\" alt=\"$altname\" title=\"$altname\" />";
	    print IXW "</a></td>\n" ;
	} else {
	    die "Unknown type $type.\n" ;
	}
	print_percentage ($i+$j+1, $nentries) ;
    }
    print IXW "    <td class=\"thumb\">&nbsp;</td>\n" unless ($show_no_film_effect) ;
    print IXW "  </tr>\n" ;
    print IXW "  <tr><td class=\"tiled\" colspan=\"", $num+2, "\">&nbsp;</td></tr>\n" unless ($show_no_film_effect) ;
    if ($show_dimensions or $show_size) {
	print IXW "  <tr>\n";
	print IXW "    <td>&nbsp;</td>\n" unless ($show_no_film_effect) ;
	for (my $j = 0; $j < $num; $j++) {
	    print IXW "    <td class=\"thumb-dim\">" ;
	    my $type = $entries[$i+$j]->{type} ;
	    if ($type == $TYPE_IMG or $type == $TYPE_MVI or $type ==$TYPE_FIL) {
		my $printdim = "$entries[$i+$j]->{scaled_xdim}x$entries[$i+$j]->{scaled_ydim}" ;
		my $printsize = "$entries[$i+$j]->{scaled_kbytes}$show_size_unit" ;
		if ($show_dimensions && $show_size && $type == $TYPE_IMG) {
		    print IXW "$printdim ($printsize)" ;
		} elsif ($show_size) {
		    print IXW "$printsize" ;
		} elsif ($show_dimensions) {
		    print IXW "$printdim" if $type == $TYPE_IMG ;
	    	}
	    }
	    print IXW "</td>\n" ;
	}
	print IXW "    <td>&nbsp;</td>\n" unless ($show_no_film_effect) ;
	print IXW "  </tr>\n" ;
    }
#	write image captions under images if option -u is given
    if ($show_caption_under_thumbnails) {
	print IXW "  <tr>\n" ;
	print IXW "<td>&nbsp;</td>\n" unless ($show_no_film_effect) ;
	for (my $j = 0; $j < $num; $j++) {
	    print IXW "    <td class=\"thumb-caption\">$entries[$i+$j]->{caption}</td>\n" ;
	}
	print IXW "  </tr>\n" ;
    }
    print IXW "</table>\n<br />\n" ;
}

# search next <!-- ********** -->
while (!(<IXR> =~ m/\*{10}/)) {};

# footers
while (defined ($line = <IXR>)) {
    if ($line =~ m/<!--FOOTERS-->/) {
	foreach my $footer (@footers) {
	    print IXW "    <div class=\"footer\">" . $footer . "</div>\n";
	}
    } else {
	$line =~ s/<!--TITLE-->/$index_title/g;
	print IXW "$line";
    }
}
close(IXW) ;
close(IXR) ;
print "\n" ;

if ($forced_width_warning) {
    add_warning "Row width max ($pixels_per_row) too low for one single thumbnail. "
	. "Forced $forced_width_warning time". ($forced_width_warning>1?"s":"") ."." ;
}
show_warnings ;

#######################################################################
# If --www was invoked make all files world-readable at the END
if ($www_access_rights) {
    my $dir = "$destination_dir/" ;
    $dir = ""
	if $destination_dir eq "." ;
    indprint "Making all llgal files world-readable for WWW publishing.\n" ;

    system ("chmod a+r $destination_dir/$local_llgal_dir/$css_filename 2> /dev/null") ;
    add_warning "Failed to make '$destination_dir/$local_llgal_dir/$css_filename' world readable."
	if $? ;

    system ("chmod a+r $destination_dir/*.html 2> /dev/null") ;
    add_warning "Failed to make '$destination_dir/*.html' world readable."
	if $? ;

    system ("chmod a+r $destination_dir/$local_llgal_dir/$thumbnail_image_filenameprefix*.* 2> /dev/null") ;
    add_warning "Failed to make '$destination_dir/$local_llgal_dir/$thumbnail_image_filenameprefix*.*' world readable."
	if $? ;

    if (($slide_width_max > 0 or $slide_height_max > 0) and !$make_no_slides) {
	system ("chmod a+r $destination_dir/$local_llgal_dir/$scaled_image_filenameprefix*.* 2> /dev/null") ;
	add_warning "Failed to make '$destination_dir/$local_llgal_dir/$scaled_image_filenameprefix*.*' world readable."
	    if $? ;
    }

    system ("chmod a+r $destination_dir/$local_llgal_dir/$filmtile_filename 2> /dev/null") ;
    add_warning "Failed to make '$destination_dir/$local_llgal_dir/$filmtile_filename' world readable."
	if $? ;

    for(my $i = 0; $i < $nentries; $i++) {
	next if ($entries[$i]->{type} != $TYPE_IMG
		 and $entries[$i]->{type} != $TYPE_MVI
		 and $entries[$i]->{type} != $TYPE_FIL
		 and $entries[$i]->{type} != $TYPE_DIR) ;
	my $file = $entries[$i]->{filename} ;
	if ($entries[$i]->{type} == $TYPE_DIR) {
	    system ("chmod a+rx $dir$file 2> /dev/null") ;
	    add_warning "Failed to make '$dir$file' world readable and traversable."
		if $? ;
	} else {
	    system ("chmod a+r $dir$file") ;
	    add_warning "Failed to make '$dir$file' world readable."
		if $? ;
	}
    }
    show_warnings ;
}

