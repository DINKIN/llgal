if ($make_recursive) {
    foreach my $dir ( @subdirs ) {
	print "\n" ;
	indprint "Entering subdirectory '$dir'...\n" ;
	system ( $0, @llgal_options, "-d", "$destination_dir/$dir", "--parent", "--indent", $indent."  " ) ;
